<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/makkara_bg_yellow"
    tools:context=".MainActivity">

    <!-- Otsikko "kortti" tyylinen -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/makkara_dark_brown"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="32dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uunimakkara Tutka"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/makkara_bg_yellow" 
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:fontFamily="sans-serif-black"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSijainti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haetaan sijaintia..."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/makkara_dark_brown"
        android:layout_marginBottom="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTanaan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Onko tänään?"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/makkara_red"
        app:cornerRadius="20dp"
        app:strokeColor="@color/makkara_dark_brown"
        app:strokeWidth="3dp"
        android:layout_marginBottom="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViikko"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Löytyykö tälle viikolle?"
        android:textColor="@color/makkara_dark_brown"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/makkara_green"
        app:cornerRadius="20dp"
        app:strokeColor="@color/makkara_dark_brown"
        app:strokeWidth="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haku säteellä: 30 km"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:textColor="@color/makkara_dark_brown"
        android:alpha="0.7" />

    <!-- Piilotettu WebView taustalatausta varten -->
    <WebView
        android:id="@+id/hiddenWebView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible" />

</LinearLayout>